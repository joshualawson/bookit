{
    "manifest_version": 2,
    "name": "Bookit",
    "version": "1.0",
    "description": "Bookmarks your session and updates the bookmark with every page change and scroll position",
    "permissions": [
        "tabs",
        "storage"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "borderify@example.com"
        }
    },
    "browser_action": {
        "default_icon": "icons/icon.png",
        "default_title": "Bookmark It - Marks"
    },
    "page_action": {
        "browser_style": true,
        "default_icon": {
            "19": "icons/icon.png",
            "38": "icons/icon.png"
        },
        "default_title": "Bookmark It",
        "show_matches": [
            "<all_urls>"
        ]
    },
    "background": {
        "scripts": [
            "dist/background.js"
        ]
    },
    "content_scripts": [
        {
            "all_frames": true,
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "scroller.js"
            ]
        }
    ]
}